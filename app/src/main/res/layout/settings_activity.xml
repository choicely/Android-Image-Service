<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar" />


        <RadioGroup
            android:id="@+id/settings_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/settings_picasso_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="Picasso"
                />

            <RadioButton
                android:id="@+id/settings_glide_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="Glide"
                />

            <RadioButton
                android:id="@+id/settings_fresco_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="Fresco"
                />

            <RadioButton
                android:id="@+id/settings_universal_image_loader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="Universal Image Loader"
                />

            <RadioButton
                android:id="@+id/settings_ion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="ION"
                />

            <RadioButton
                android:id="@+id/settings_choicely_image_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_double"
                android:paddingTop="@dimen/margin_double"
                android:text="Choicely ImageService"
                />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample size:"
                />

            <EditText
                android:id="@+id/settings_sample_size_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onGcClick"
                android:text="GC"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClearCacheClick"
            android:text="Clear cache"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_double"
            android:text="tests:"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/settings_blur_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal"
                android:text="Blur"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_toLeftOf="@id/main_settings_button"
            android:onClick="onGifClick"
            android:text="Gif  testing"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:onClick="onStartClick"
            android:text="START"
            android:textSize="40dp"
            />

    </LinearLayout>

</ScrollView>